""".vimrc"""

" common
set mouse=a
set clipboard=unnamedplus
set tabstop=4
set shiftwidth=4
set expandtab
set number
set relativenumber

"colorscheme industry

" Makefile
autocmd Filetype make setlocal noexpandtab

" yml,yaml,bu
autocmd Filetype yaml setlocal shiftwidth=2 tabstop=2
au! BufRead,BufNewFile *.bu setlocal shiftwidth=2 tabstop=2

" tf
au! BufRead,BufNewFile *.tf setlocal shiftwidth=2 tabstop=2

colorscheme industry

" gvim options
if has("gui_running")
    colorscheme default
    set guifont=Iosevka\ Term\ Bold\ 15
    set noerrorbells
    set vb t_vb=
    set number
    set relativenumber
endif
